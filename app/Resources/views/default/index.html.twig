{% extends 'base.html.twig' %}

{% block body_type %}homepage{% endblock %}
{% block html_id %}homepage-html{% endblock %}
{% block body %}
<div class="container">
    <div class="container presentation">
        <div class="row">
            <div class="col-md-4"><i class="fas fa-utensils"></i><p id="n1">2550000</p> tone de m&#226;ncare irosita anual in Romania.</div>
            <div class="col-md-4"><i class="fas fa-user"></i><p id="n2">132495</p> grame de m&#226;ncare irosita de o persoana anual in medie.</div>
            <div class="col-md-4"><i class="far fa-trash-alt"></i><p id="n3">30%</p> din alimente sunt irosite.</div>
        </div>
    </div>
</div>
{% endblock %}

{% block bottom_scripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/vendor/countUp.min.js') }}"></script>

    <script>
        var options = {
            useEasing: true,
            useGrouping: true,
            separator: ',',
            decimal: '.',
        };
        new CountUp('n1', 0, $('#n1').text(), 0, 2.5, options).start();
        new CountUp('n2', 0, $('#n2').text(), 0, 2.5, options).start();
        new CountUp('n3', 0, $('#n3').text(), 0, 2.5, options).start();
    </script>
{% endblock %}